[flake8]
max-line-length = 88
extend-ignore = 
    E203,  # whitespace before ':'
    E501,  # line too long (handled by black)
    W503,  # line break before binary operator
    F401,  # module imported but unused (handled by isort)
exclude = 
    .git,
    __pycache__,
    .pytest_cache,
    .coverage,
    *.egg-info,
    build,
    dist,
    .venv,
    venv
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S106  # Allow assert statements and hardcoded passwords in tests
max-complexity = 10
